---
import Menu from './menu.astro';
const { title } = Astro.props;
const { frontmatter } = Astro.props;
---

<html lang="en">
<head>
  {/* Add other Head elements here, like styles and meta tags. */}
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta charset="utf-8">
  <title>{frontmatter.title}</title>
  <link rel="stylesheet" href="../styles/global.css">
</head>
<body class="bg-white text-black dark:text-white dark:bg-slate-950">
  <Menu />
  <div class="flex flex-col items-center justify-center min-h-screen">
    <h1 class="text-4xl font-bold mb-6">{frontmatter.title}</h1>
    <p class="text-gray-400">by {frontmatter.author}</p>
    <p class="text-gray-500 mt-4 mb-8">Written on: {new Date(frontmatter.date).toLocaleDateString()}</p>
    <div class="max-w-3xl prose">
      {/* Rendered HTML will be passed into the default slot. */}
      <slot />
    </div>
  </div>
</body>
</html>
