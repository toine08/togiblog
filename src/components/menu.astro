---
const currentPath = Astro.url.pathname;

const menuItems = [
  { href: "/", label: "Home" },
  { href: "/blog", label: "Articles" },
  { href: "/about/", label: "Togiwho ?" },
];
---

<nav class="w-full flex justify-center m-1">
  <ul class="w-full max-w-md flex justify-between bg-bluefluo dark:bg-greenfluo rounded-md p-2 space-x-2">
    {menuItems.map(({ href, label }) => (
      <li class="flex-1">
        <a
          href={href}
          class={`block text-center text-lg font-sans font-bold py-2 px-4 rounded-md transition duration-200 ease-in-out
            ${currentPath === href ? 'bg-blue-700 text-white dark:bg-green-500 dark:text-white' : 'text-white hover:bg-blue-900 dark:hover:bg-green-600'}
          `}
          aria-current={currentPath === href ? 'page' : undefined}
        >
          {label}
        </a>
      </li>
    ))}
  </ul>
</nav>

