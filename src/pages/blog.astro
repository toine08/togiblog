---
import Layout from "../components/layout.astro"
const posts = await Astro.glob('../pages/posts/*.md');

---

<Layout title="Articles">
  <div class="max-w-4xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">Latest Articles</h1>
    <ul class="space-y-8">
      {posts.slice(0, 4).map((post) => (
        <li class="bg-white dark:bg-gray-800 shadow-md rounded-lg overflow-hidden transition-transform duration-300 hover:scale-105">
          <article class="p-6">
            <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
              {post.frontmatter.title}
            </h2>
            <p class="text-gray-600 dark:text-gray-300 mb-4">
              {post.frontmatter.description}
            </p>
            <div class="flex justify-between items-center">
              <a 
                href={post.url} 
                class="text-blue-600 dark:text-blue-400 hover:underline font-medium"
              >
                Read more â†’
              </a>
            </div>
          </article>
        </li>
      ))}
    </ul>
  </div>
</Layout>